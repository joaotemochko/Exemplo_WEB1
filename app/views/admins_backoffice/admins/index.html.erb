<h1>Listando Administradores</h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td><%= admin.id %></td>
          <td><%= admin.email %></td>
          <td style="width: 50px">
            <%= button_tag admins_backoffice_welcome_index_path, class: 'btn btn-primary btn-circle' do %>
              <i class="fa fa-edit"></i>
            <% end %>

            <%= button_tag admins_backoffice_welcome_index_path, class: 'btn btn-danger btn-circle' do %>
              <i class="fa fa-minus"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
